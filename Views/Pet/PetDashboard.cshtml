@model PetBook.Models.Pet
@{
    ViewData["Pet Profile"] = "Pet Profile";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>PetBook</title>

</head>




<body>
    
     
        <div class="container-fluid" style="background-color: transparent">

            <!--This is the container for the body render-->
            <div class="container-fluid">
                <div class="card mb-lg-1" style="max-width:1200px; background-color: transparent; border-width: 0px">
                    <div class="row">


                        <!--This is the profile image-->
                        <div class="col-md-3" style="padding: 30px">
                            <img src="~/Dog.jpg" alt="Pet Profile" class="img-thumbnail">

                            <!--This is the side navigation bar-->
                            <!--TODO-->
                            <ul class="nav flex-column">
                                <li class="nav-item" style="padding-top:10px">
                                    <a class="nav-link" asp-area="" asp-controller="MedicalFiles" asp-action="PetMedFile">@Model.PetName Medical File</a>
                                </li>
                                <!--TODO-->
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Veterinarian" asp-action="Details">@Model.PetName Veterinarian Profile</a>
                                </li>
                                <!--TODO-->
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Calendar" asp-action="CreateCalendar">Add Event</a>
                                </li>
                                <!--TODO-->
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Calendar" asp-action="EditCalendar">Edit Event</a>
                                </li>
                                <!--TODO-->
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Calendar" asp-action="IndexCalendar">List Event</a>
                                </li>
                                <!--TODO-->
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Dashboard">Return to your Dashboard</a>
                                </li>
                                <!--TODO-->
                                <li class="nav-item">
                                    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true"></a>
                                </li>
                                
                            </ul>
                        </div>
                                                
                        <!--This is the Clients Name Heading-->
                        <div class="col-md-9" style="padding-left:50px; border:thin">
                            <div class="card-body" ; style="padding:20px">
                                <h2 class="card-deck">@Model.PetName<br /></h2>
                            </div>


                            <!--This is the Pets Biometric data cards-->
                        
                            <div class="row"></div>
                            <div class="card" style="width: 35rem; background-color: transparent; border-width: 0px">
                                <div class="card-body" ; style="padding:20px">
                                    <h5 class="card-title">Pet Id Number</h5><p class="card-text">@Model.PetId</p></br>

                                    <h5 class="card-title">Breed</h5><p class="card-text">@Model.PetBreed</p>

                                    <h5 class="card-title">Sex</h5><p class="card-text">@Model.PetSex</p>

                                    <h5 class="card-title">Species</h5><p class="card-text">@Model.PetSpecies</p>
                                </div>
                            </div>
                            
                            <div class="col-10" style="text-decoration-color:lime">
                                <td>
                                    <a asp-action="EditPet" asp-route-id="@Model.PetId">Edit Profile</a> |
                                </td>
                                <td>
                                    <a asp-action="RemovePet" asp-route-id="@Model.PetId">Delete Pet</a> |
                                </td>
                            </div>
                        </div>



                    </div>
                    </div>

                </div>
            </div>
    <br />
    <br />
            <!--Start of the events card that lists the calendar events of each pet on the Home Page / Dashboard-->

            <div class="card text-center" style="background-color:transparent">
                <div class="card" style="background-color:transparent">
                    <div class="card-body">

                        <h5 class="card-title">@Model.PetName Events Snap Shot</h5>
                        <p class="card-text"><partial>@Model.ClientPet</partial></p>
                        <p class="card-text"><partial>@Model.ClientPet</partial></p>
                        <p class="card-text"><partial>@Model.ClientPet</partial></p>
                        <p class="card-text"><partial>@Model.ClientPet</partial></p>
                        <p class="card-text"><partial>@Model.ClientPet</partial></p>
                        <p class="card-text"><partial>@Model.ClientPet</partial></p>
                        <p class="card-text"><partial>@Model.ClientPet</partial></p>
                        <p class="card-text"><partial>@Model.ClientPet</partial></p>
                        <p class="card-text"><partial>@Model.ClientPet</partial></p>
                        <p class="card-text"><partial>@Model.ClientPet</partial></p>
                        <p class="card-text"><partial>@Model.ClientPet</partial></p>

                        <a href="#" class="btn btn-outline-secondary">Calendar</a>
                    </div>
                </div>
            </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>

</html>