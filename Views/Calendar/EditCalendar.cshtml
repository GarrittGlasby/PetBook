@model PetBook.Models.Calendar

@{
    ViewData["Edit Event"] = "Edit Event";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


    <div class="container-fluid" style="background-color: transparent">

        <!--This is the container for the body render-->
        <div class="container-fluid">
            <div class="card mb-lg-1" style="max-width:1200px; background-color: transparent; border-width: 0px">
                <div class="row">

                    <!--This is the profile image-->
                    <div class="col-md-3" style="padding: 30px">
                        <img src="~/ProfilePic.png" alt="User Profile" class="img-thumbnail">

                        <!--This is the side navigation bar-->
                        <!--TODO-->
                        <ul class="nav flex-column">
                            <li class="nav-item" style="padding-top:10px">
                                <a class="nav-link" asp-area="" asp-controller="Calendar" asp-action="DetailsCalendar">View Calendar</a>
                            </li>
                            <!--TODO-->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Calendar" asp-action="CreateCalendar">Add Calendar Event</a>
                            </li>
                            <!--TODO-->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Calendar" asp-action="EditCalendar">Edit Calendar Event</a>
                            </li>
                            <!--TODO-->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Calendar" asp-action="DeleteCalendar">Delete Calendar Event</a>
                            </li>
                            <!--TODO-->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="SiteInformation"></a>
                            </li>
                            <!--TODO-->
                            <li class="nav-item">
                                <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true"></a>
                            </li>
                        </ul>
                    </div>
                    <!--Start of Edit -->


                    <div class="col-6" style="padding-left: 50px">
                        <h1>Edit Event</h1>

                        <h4></h4>
                        <hr />


                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="CalendarId" />
                            <div class="form-group">
                                <label asp-for="EntryCreated" class="control-label"></label>
                                <input asp-for="EntryCreated" class="form-control" />
                                <span asp-validation-for="EntryCreated" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EntryTitle" class="control-label"></label>
                                <input asp-for="EntryTitle" class="form-control" />
                                <span asp-validation-for="EntryTitle" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EntryActionDate" class="control-label"></label>
                                <input asp-for="EntryActionDate" class="form-control" />
                                <span asp-validation-for="EntryActionDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EntryNotes" class="control-label"></label>
                                <input asp-for="EntryNotes" class="form-control" />
                                <span asp-validation-for="EntryNotes" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>


                    <div>
                    </div>
                    <a asp-action="Index">Back to List</a>
                </div>
                <div>

                    @section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }
                </div>
            </div>    
     </div>
</div>
        