@model IEnumerable<PetBook.Models.Calendar>

@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


    <div class="container-fluid" style="background-color: transparent">

        <!--This is the container for the body render-->
        <div class="container-fluid">
            <div class="card mb-lg-1" style="max-width:1200px; background-color: transparent; border-width: 0px">
                <div class="row">

                    <!--This is the profile image-->
                    <div class="col-md-3" style="padding: 30px">
                        <img src="~/ProfilePic.png" alt="User Profile" class="img-thumbnail">

                        <!--This is the side navigation bar-->
                        <!--TODO-->
                        <ul class="nav flex-column">
                            <li class="nav-item" style="padding-top:10px">
                                <a class="nav-link" asp-area="" asp-controller="Calendar" asp-action="DetailsCalendar">View Calendar</a>
                            </li>
                            <!--TODO-->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Calendar" asp-action="CreateCalendar">Add Calendar Event</a>
                            </li>
                            <!--TODO-->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Calendar" asp-action="EditCalendar">Edit Calendar Event</a>
                            </li>
                            <!--TODO-->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Calendar" asp-action="DeleteCalendar">Delete Calendar Event</a>
                            </li>
                            <!--TODO-->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="SiteInformation"></a>
                            </li>
                            <!--TODO-->
                            <li class="nav-item">
                                <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true"></a>
                            </li>
                        </ul>
                    </div>

                    <!--Start of Calendar Details-->
                    <div class="col-6" style="padding-left: 50px">
                        <h1>Index</h1>

                        <p>
                            <a asp-action="Create">Create New</a>
                        </p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EntryCreated)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EntryTitle)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EntryActionDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EntryNotes)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EntryCreated)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EntryTitle)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EntryActionDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EntryNotes)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.CalendarId">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.CalendarId">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.CalendarId">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                    </div>
                </div>
            </div>
        </div>
    </div>

    